# Application Environment
NODE_ENV=development

# Database Configuration (DEFERRED for 3-day MVP - using in-memory storage)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=growth_engine
DATABASE_URL="postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=public"

# Redis Configuration (DEFERRED for 3-day MVP)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL="redis://${REDIS_HOST}:${REDIS_PORT}"

# JWT Authentication (REQUIRED for 3-day MVP)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_EXPIRATION=7d

# OpenAI API (REQUIRED for Day 2 AI integration)
OPENAI_API_KEY=sk-proj-PLACEHOLDER-replace-with-real-key-on-day-2
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Email Configuration (DEFERRED for 3-day MVP)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@growthengine.app

# SendGrid (Production) - DEFERRED
# SENDGRID_API_KEY=your-sendgrid-api-key

# Application URLs
BACKEND_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000

# Rate Limiting (DEFERRED for 3-day MVP)
RATE_LIMIT_GLOBAL=100
RATE_LIMIT_AUTH=5
RATE_LIMIT_ANALYSIS=10

# File Upload (DEFERRED for 3-day MVP)
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=debug  # error, warn, info, debug

# Google Cloud Storage (Production) - DEFERRED
# GCS_BUCKET_NAME=your-bucket-name
# GCS_PROJECT_ID=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=./path/to/credentials.json
